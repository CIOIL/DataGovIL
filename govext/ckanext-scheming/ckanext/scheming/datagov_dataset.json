{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "A reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "remark",
      "label": {
                "en": "Remarks",
                "he": "הערות"
      },
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful remarks about the data",
      "display_property": "dc:remarks"
    },
    {
      "required" : "True",
      "preset": "select",
      "field_name": "Frequency",
      "label": "Frequency",
      "output_validators": "ignore_missing",
      "choices": [
        {
            "label": "NA",
            "value": "NA"
        },
        {
            "label": "Year",
            "value": "Year"
        },
        {
            "label": "Quarter",
            "value": "Quarter"
        },
        {
            "label": "Month",
            "value": "Month"
        },
        {
            "label": "Week",
            "value": "Week"
        },
        {
            "label": "Day",
            "value": "Day"
        },
        {
            "label": "NoUpdate",
            "value": "NoUpdate"
        },
        {
            "label": "NotConstant",
            "value": "NotConstant"
        },
        {
            "label": "NoUpdate",
            "value": "NoUpdate"
        },
        {
            "label": "NoUpdate",
            "value": "NoUpdate"
        }
      ]
    },
    {
      "required" : "True",
      "preset": "select",
      "field_name": "Update",
      "label": "Update",
      "output_validators": "ignore_missing",
      "choices": [
        {
            "label": "NA",
            "value": "NA"
        },
        {
            "label": "Manual",
            "value": "Manual"
        },
        {
            "label": "Automat",
            "value": "Automat"
        }
      ]
    },
    {
      "required" : "True",
      "preset": "select",
      "field_name": "Accessibility",
      "label": "Accessibility",
      "output_validators": "ignore_missing",
      "choices": [
        {
            "label": "Accessible",
            "value": "Accessible"
        },
        {
            "label": "NotAccessible",
            "value": "NotAccessible"
        }
      ]
    },
    {
      "required" : "True",
      "preset": "select",
      "field_name": "ContainPrivateData",
      "label": "ContainPrivateData",
      "output_validators": "ignore_missing",
      "choices": [
        {
          "label": "No",
          "value": "No"
        },
        {
          "label": "Yes",
          "value": "Yes"
        }
      ]
    },
    {
      "required" : "True",
      "preset": "select",
      "field_name": "is_geographic",
      "label": "is_geographic",
      "output_validators": "ignore_missing",
      "choices": [
        {
          "label": "No",
          "value": "No"
        },
        {
          "label": "Yes",
          "value": "Yes"
        }
      ]
    },
    {
      "field_name": "tag_string",
      "required": "True",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "url",
      "label": "Source",
      "form_placeholder": "http://example.com/dataset.json",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "ignore_missing unicode package_version_validator",
      "form_placeholder": "1.0"
    },
    {
      "field_name": "author_email",
      "required": "True",
      "label": "Author Email",
      "validators": "scheming_required govil_email_validator",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:creator",
      "display_snippet": "email.html",
      "display_email_name_field": "author"
    }
  ],





  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
